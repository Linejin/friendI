# Backend Environment Variables Template
# Copy this file to .env and fill in your values

# Application Configuration
SPRING_PROFILES_ACTIVE=dev
APP_NAME=FriendlyI Backend
APP_VERSION=1.0.0

# Server Configuration
SERVER_PORT=8080
SERVER_ADDRESS=0.0.0.0

# Database Configuration
DB_URL=jdbc:h2:file:./data/friendlyi
DB_USERNAME=sa
DB_PASSWORD=
DB_DRIVER=org.h2.Driver

# JPA Configuration
JPA_HIBERNATE_DDL_AUTO=update
JPA_SHOW_SQL=false
JPA_DATABASE_PLATFORM=org.hibernate.dialect.H2Dialect

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure
JWT_EXPIRATION=86400000
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_CREDENTIALS=true

# Email Configuration (if needed)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_SENDER_NAME=FriendlyI System

# File Upload Configuration
FILE_UPLOAD_MAX_SIZE=10MB
FILE_UPLOAD_PATH=./uploads

# External API Configuration (example)
EXTERNAL_API_KEY=your_external_api_key_here
EXTERNAL_API_URL=https://api.external-service.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/application.log

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
ACTUATOR_ENDPOINTS=health,info,metrics