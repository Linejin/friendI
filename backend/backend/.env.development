# Development Environment
SPRING_PROFILES_ACTIVE=dev
APP_NAME=FriendlyI Backend
APP_VERSION=1.0.0
SERVER_PORT=8080
SERVER_ADDRESS=0.0.0.0

# Development Database
DB_URL=jdbc:h2:file:./data/friendlyi-dev
DB_USERNAME=sa
DB_PASSWORD=
DB_DRIVER=org.h2.Driver

JPA_HIBERNATE_DDL_AUTO=update
JPA_SHOW_SQL=true
JPA_DATABASE_PLATFORM=org.hibernate.dialect.H2Dialect

# Development Security (기본값만, 실제 값은 .env.local에서 설정)
JWT_SECRET=please_set_in_local_env_file
JWT_EXPIRATION=86400000
ADMIN_USERNAME=admin
ADMIN_PASSWORD=please_set_in_local_env_file

# Development CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_CREDENTIALS=true

# Development Logging
LOG_LEVEL=DEBUG
LOG_FILE_PATH=./logs/application-dev.log

HEALTH_CHECK_ENABLED=true
ACTUATOR_ENDPOINTS=health,info,metrics