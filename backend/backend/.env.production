# Production Environment
SPRING_PROFILES_ACTIVE=prod
APP_NAME=FriendlyI Backend
APP_VERSION=1.0.0
SERVER_PORT=8080
SERVER_ADDRESS=0.0.0.0

# Production Database (configure for your production DB)
DB_URL=jdbc:h2:file:./data/friendlyi-prod
DB_USERNAME=sa
DB_PASSWORD=
DB_DRIVER=org.h2.Driver

JPA_HIBERNATE_DDL_AUTO=validate
JPA_SHOW_SQL=false
JPA_DATABASE_PLATFORM=org.hibernate.dialect.H2Dialect

# Production CORS
CORS_ALLOWED_ORIGINS=https://yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_CREDENTIALS=true

# Production Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/application-prod.log

HEALTH_CHECK_ENABLED=true
ACTUATOR_ENDPOINTS=health,info